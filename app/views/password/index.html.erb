<main id="regmain">
  <h1 class="h1">Change Password</h1>

  <%= form_with url: password_path do |form| %>

    <% if flash[:error] %>
      <div class="alert alert-danger">
        <label><%= flash[:error] %></label>
      </div>
    <% end %>

    <%= form.password_field :password, class: "form-control", placeholder: "old password" %>
    <%= form.password_field :password2, class: "form-control", placeholder: "new password" %>
    <%= form.submit "Create Account", class: "btn btn-primary" %>
  <% end %>

</main>

<style>
    #regmain h1 {
        margin-top: 5rem;
        margin-bottom: 2rem;
    }

    #regmain form input{
        margin-top : 1rem;
        margin-bottom : 1rem;
    }
</style>